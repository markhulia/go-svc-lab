# Build the Go Binary.
FROM golang:1.19 as build_sales-api
ENV CGO_ENABLED 0
ARG BUILD_REF

COPY . /service

# Build the service binary
WORKDIR /service

RUN go build -ldflags "-X main.build=%{BUILD_REF}"

# Run the Go Binary in Alpine.
FROM alpine:3.16
ARG BUILD_DATE
ARG BUILD_REF
RUN addgroup -g 1000 -S sales && \
    adduser -u 1000 -h /service -G sales -S sales
COPY --from=build_sales-api --chown=sales:sales ./service /service/service
WORKDIR /service
USER sales
CMD ["./service"]

LABEL org.opencontainers.image.created="${BUILD_DATE}" \
    org.opencontainers.image.title="sales-api" \
    org.opencontainers.image.authors="George M" \
    org.opencontainers.image.source="https://github.com/markhulia/service" \
    org.opencontainers.image.revision="${BUILD_REF}" \
    org.opencontainers.image.vendor="markhulia/go-svc"
